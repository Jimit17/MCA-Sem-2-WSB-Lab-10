<%- include('header'); -%>
<br><br>
<link rel="stylesheet" href="../stylesheets/style.css">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto+Mono&display=swap" rel="stylesheet"> 
<div id="reg">
<h1>Sign Up !</h1>
<form method="post">
    <table>
        <tr>
            <td>Name : </td>
            <td>
                <input type="text" placeholder="Enter your Name" name="u_name" required> </td>
        </tr>
        <tr>
            <td>Email :</td>
            <td>
                <input type="email" placeholder="Enter your Mail ID" name="u_mail" required>
            </td>
        </tr>
        <tr>
            <td>Phone :</td>
            <td>
                <input type="tel" placeholder="Enter your Phone Number" name="u_phone" maxlength="10" required>
            </td>
        </tr>
        <tr>
            <td>Gender :</td>
            <td>
                <input type="text" placeholder="Enter your Gender" name="u_sex" maxlength="1" required>
            </td>
        </tr>
        <tr>
            <td>Age :</td>
            <td>
                <input type="number" placeholder="Enter your current Age" name="u_age" maxlength="3" required>
            </td>
        </tr>
        <tr>
            <td>
                <center>&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;<input type="submit" class="btn" value="Register"></center>
            </td>
        </tr>
    </table>
</form>
</div>