<%- include('header'); -%>
<br><br>
<link rel="stylesheet" href="../stylesheets/style.css">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto+Mono&display=swap" rel="stylesheet"> 
<% if(users.length>0) { %>

<table border="1">
        <tr>
                <th>ID</th>
                <th>Name</th>
                <th>EMail</th>
                <th>Phone</th>
                <th>Gender</th>
                <th>Age</th>
                <th>Action</th>
        </tr>
        <% for(var i=0; i<users.length;i++) { %>
                <tr>
                  <td><%= users[i].UID %></td>
                  <td><%= users[i].UName %></td>
                  <td><%= users[i].UMail %></td>
                  <td><%= users[i].UPhone %></td>
                  <td><%= users[i].USex %></td>
                  <td><%= users[i].UAge %></td>
                  <td>
                          <a href='/edit/<%= users[i].UID %>'>Edit</a> | 
                          <a href='/delete/<%= users[i].UID %>'>Delete</a>                
                  </td>
                </tr>
              <% } %>
        
</table>

<% } else { %>
        <br><br>
        No Record Found
<% } %>